<Window x:Class="DIlbert.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DIlbert"
        mc:Ignorable="d"
        Title="Daily Dilbert" Height="450" Width="800" Loaded="Window_Loaded"> 
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="589*"/>
            <ColumnDefinition Width="203*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" FontSize="16" Grid.ColumnSpan="2" Click="Button_Click">Get</Button>
        <Image x:Name="comic" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
